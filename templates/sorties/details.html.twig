{% extends 'base.html.twig' %}
{% block body %}

    <h3>{{ sortie.nom }}</h3>

    <div>Organisateur : {relation organisateur} </div>
    <div>Date et heure de la sortie : {{ sortie.dateHeureDebut | date("d/m à h:m") }}</div>
    <div>Date limite d'inscription : {{ sortie.dateLimiteInscription | date("d/m à h:m") }}</div>
    <div>Nombre de places : {{ sortie.nbInscriptionsMax }} (reste {relation inscrit} places)</div>
    <div>Durée : {{ sortie.duree }} minutes {% if sortie.duree%60 == 0  %}({{ sortie.duree%60 }} h {% endif %})</div>
    <div>Description et infos : {{ sortie.infosSortie }} </div>
    <div>Campus :  </div>
    <div>Lieu :  </div>
    <div>Rue :  </div>
    <div>Code Postal :  </div>
    <div>Latitude : Non renseignée</div>
    <div>Longitude : Non renseignée</div>

    <h4>Liste des participants inscrits :</h4>
    <table>
        <tr><th>Pseudo</th><th>Nom</th></tr>
        {% for pseudo in pseudos %}
            <tr>
                <td>
                    <a>{{ pseudo[0] }}</a>
                </td>
                <td>
                    <a>{{ pseudo[1] }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {# todo: Changer les cjumeline par les {Partipant.id ou .mail} #}
    {% if app.user and app.user.mail == "cjumelinee@tutanota.com" %}
        <button type="submit" name="modifier" value="modifier">
            <a href="{{ path('sorties_edit',{'id' : sortie.id} )}}" >Modifier</a>
        </button>
        <button type="submit" name="modifier" value="modifier">
            <a href="{{ path('sorties_edit',{'id' : sortie.id} )}}" >Publier</a>
        </button>
        <button type="submit" name="annuler" value="annuler">
            <a href="{{ path('sorties_annuler',{'id' : sortie.id})}}">Annuler</a>
        </button>
    {% endif %}
    {% if app.user and app.user.mail != "cjumelinee@tutanota.com" %}
        <!--if si je ne participte pas-->
        <button type="submit" name="modifier" value="modifier">
            <a href="{{ path('sorties_edit',{'id' : sortie.id} )}}" >Participer</a>
        </button>
        <button type="submit" name="annuler" value="annuler">
            <a href="{{ path('sorties_annuler') }}">Se désister</a>
        </button>
    {% endif %}

    <button onclick="history.back()">Retour</button>

{% endblock %}
