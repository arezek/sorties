{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div id="ShowParticipant">
<h1>{{ participant.pseudo }}</h1>


    <table class="tableParticipant">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr> #}
            {# <tr>
                <th>Pseudo</th>
                <td>{{ participant.pseudo }}</td>
            </tr> #}

            {#
            <tr>
            <th>Roles</th>
            <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
            </tr>
            #}
            {#
            <tr>
            <th>Password</th>
            <td>{{ participant.password }}</td>
            </tr>
            #}


            <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ participant.mail }}</td>
            </tr>
            <!-- <tr>
                <th>Actif</th>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
            </tr> -->
            <tr>
                <th>Campus</th>
                <td>{{ participant.campus.nom }}</td>
            </tr>
            {% if (participant.administrateur == 1) %}
                <tr>
                    <th>Administrateur</th>
                    <td>{{ participant.administrateur ? 'oui' : 'Non' }}</td>
                </tr>
            {% endif %}

        </tbody>
    </table>

    <a href="{{ path('profil_edit', {'id': participant.id}) }}">Modifier</a>

    {{ include('participant/_delete_form.html.twig') }}
</div>
{% endblock %}
