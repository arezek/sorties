{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div>

		<h1>Inscription</h1>
		{{ form_start(registrationForm) }}

		{{ form_widget(registrationForm) }}
		<div>
			<label>Campus </label>
			<select name="optionSelectCampus">
				{% for campus in campuses %}
					<option  name="optionSelect" value="{{campus.id}}">{{campus.nom}}</option>
				{% endfor %}
			</select>
		</div>

		<div>
			<label>Ma photo </label>
			{# Todo : ATTENTION : Javascript pour la photo et pas submit le formulaire #}
			<button>Uploader</button>
		</div>

		<div class="btnSousFormulaire">
			<button name="inscription" type="submit" class="btn">M'inscrire</button>
			<button><a href="{{ path('main_index') }}">Annuler</a></button>
		</div>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
